<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
</head>
<body>
    <h2>Product List</h2>
    <% if (products.length > 0) { %>
        <ul>
            <% products.forEach(product => { %>
                <li>
                    <strong>Product Name:</strong> <%= product.productName %><br>
                    <strong>Product Price:</strong> $<%= product.productCurrentPrice.toFixed(2) %><br>
                    
                    <!-- Main Image -->
                    <img src="/uploads/<%= product.primaryImage %>" alt="<%= product.productName %> Image" width="100">
                    
                
                    
                    <br>
                    <a href="/products/detail/<%= product._id %>">View Details</a>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No products available.</p>
    <% } %>
</body>
</html>
